<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="709dp"
        tools:context=".makanan.MenuMakanan">

        <ImageView
            android:id="@+id/btn_capture_photo"
            android:layout_width="425dp"
            android:layout_height="189dp"
            android:src="@drawable/kotak"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"></ImageView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_makanan"
            android:layout_width="403dp"
            android:layout_height="648dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_capture_photo"
            tools:listitem="@layout/adapter_recycler_view" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="FoodMenu"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="@+id/btn_capture_photo"
            app:layout_constraintHorizontal_bias="0.544"
            app:layout_constraintStart_toStartOf="@+id/btn_capture_photo"
            app:layout_constraintTop_toTopOf="@+id/btn_capture_photo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>